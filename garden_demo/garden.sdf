<?xml version="1.0" ?>

<sdf version="1.9">
  <world name="Garden">
    <!-- gravity of the moon -->
    <gravity>0 0 -1.62</gravity>

    <scene>
      <ambient>1.0 1.0 1.0 1.0</ambient>
      <background>0.8 0.8 0.8 1.0</background>
      <grid>false</grid>
    </scene>

    <plugin
      filename="gz-sim-physics-system"
      name="gz::sim::systems::Physics">
    </plugin>
    <plugin
      filename="gz-sim-sensors-system"
      name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin
      filename="gz-sim-user-commands-system"
      name="gz::sim::systems::UserCommands">
    </plugin>
    <plugin
      filename="gz-sim-scene-broadcaster-system"
      name="gz::sim::systems::SceneBroadcaster">
    </plugin>

    <light type="directional" name="sun">
      <cast_shadows>true</cast_shadows>
      <pose>0 0 10 0 0 0</pose>
      <diffuse>0.8 0.8 0.8 1</diffuse>
      <specular>0.2 0.2 0.2 1</specular>
      <attenuation>
        <range>1000</range>
        <constant>0.9</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <direction>-0.5 0.1 -0.9</direction>
    </light>

    <include>
      <pose>0 0 0 0 0 0</pose>
      <uri>
        Moon base dome
      </uri>
      <experimental:params>
        <collision element_id="Dome::DomePt01_collision" action="remove"/>
        <collision element_id="Dome::DomePt02_collision" action="remove"/>
        <collision element_id="Dome::InnerDome_collision" action="remove"/>
        <collision element_id="main::InnerWallFrame_collision" action="remove"/>
        <collision element_id="main::InnerWallUpper_collision" action="remove"/>
      </experimental:params>
    </include>

    <include>
      <pose>0 0 0 0 0 0</pose>
      <uri>
        Moon base water
      </uri>
    </include>

    <include>
      <uri>
        Garden heightmap
      </uri>
    </include>

    <include>
      <name>Fan1</name>
      <pose>6.0 -85.217 8.88 0 0 0</pose>
      <uri>
        Moon base fan blade
      </uri>
      <experimental:params>
        <!-- the collision reduces RTF -->
        <collision element_id="Fan::collision" action="remove"/>
        <plugin element_id="gz::sim::systems::JointController" action="modify">
          <initial_velocity>4.5</initial_velocity>
        </plugin>
      </experimental:params>
    </include>

    <include>
      <name>Fan2</name>
      <pose>-6 -85.217 8.88 0 0 0</pose>
      <uri>
        Moon base fan blade
      </uri>
      <experimental:params>
        <!-- the collision reduces RTF -->
        <collision element_id="Fan::collision" action="remove"/>
      </experimental:params>
    </include>

    <model name="Foucault pendulum">
      <!--link name="support">
	<inertial>
          <mass>1000.</mass>
          <inertia>
            <ixx>750.8333</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>750.8333</iyy>
            <iyz>0</iyz>
            <izz>1500</izz>
          </inertia>
        </inertial>
        <gravity>0</gravity>
        <pose>0 0 55 0 0 0</pose>
        <collision name="collision">
          <geometry>
            <box>
              <size>3.0 3.0 0.1</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>3.0 3.0 0.1</size>
            </box>
          </geometry>
        </visual>
      </link-->
      <joint name="joint" type="ball">
        <parent>world</parent>
        <child>wire</child>
      </joint>
      <link name="wire">
        <pose>0 0 60 0 1.0 0</pose>
        <inertial>
          <mass>0.5</mass>
          <inertia>
            <ixx>4.166666</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>4.166666</iyy>
            <iyz>0</iyz>
            <izz>4.166666</izz>
          </inertia>
        </inertial>
	<collision name="collision">
	  <pose>0 0 -25 0 0 0</pose>
          <geometry>
            <cylinder>
              <length>50</length>
              <radius>0.05</radius>
            </cylinder>
          </geometry>
        </collision>
	<visual name="visual">
          <pose>0 0 -25 0 0 0</pose>
          <geometry>
            <cylinder>
              <length>50</length>
              <radius>0.05</radius>
            </cylinder>
          </geometry>
        </visual>
      </link>
      <joint name="attachment" type="fixed">
	<pose relative_to="wire">
	    0 0 -50 0 0 0
	</pose>
        <parent>wire</parent>
        <child>bob</child>
      </joint>
      <link name="bob">
	<enable_wind>1</enable_wind>
	<pose relative_to="attachment">
	    0 0 -0.5 0 0 0
	</pose>
        <inertial>
          <mass>100</mass>
          <inertia>
            <ixx>66.6666</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>66.6666</iyy>
            <iyz>0</iyz>
            <izz>66.6666</izz>
          </inertia>
        </inertial>
        <collision name="collision">
          <geometry>
            <sphere>
              <radius>1</radius>
            </sphere>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>1</radius>
            </sphere>
          </geometry>
        </visual>
      </link>
    </model>

    <plugin
      filename="gz-sim-wind-effects-system"
      name="gz::sim::systems::WindEffects">
      <force_approximation_scaling_factor>
	<when ylt="-85.217">0</when>
	<when yge="-85.217" xge="8.0">0</when>
	<when yge="-85.217" xle="-8.0">0</when>
	<when yge="-85.217" xlt="8.0" xgt="-8.0" zge="12.0">0</when>
	<when yge="-85.217" xlt="8.0" xgt="-8.0" zle="0.0">0</when>
	<when yge="-85.217" xlt="8.0" xgt="-8.0" zlt="12.0" zgt="0.0">0.5</when>
      </force_approximation_scaling_factor>
      <horizontal>
        <magnitude>
          <time_for_rise>1</time_for_rise>
          <sin>
            <amplitude_percent>1</amplitude_percent>
            <period>20</period>
          </sin>
        </magnitude>
        <direction>
          <time_for_rise>1</time_for_rise>
          <sin>
            <amplitude>20</amplitude>
            <period>10</period>
          </sin>
        </direction>
      </horizontal>
    </plugin>
    <wind>
      <linear_velocity>0 0.5 0</linear_velocity>
    </wind>

    <include>
      <pose>0 77.5 3.52 0 0 0</pose>
      <uri>
        Gazebo flag
      </uri>
    </include>

    <include>
      <pose>-24.2546 46.7498 1.6941 0 0 1.6941</pose>
      <uri>
        Garden Mascot
      </uri>
    </include>

  </world>
</sdf>
